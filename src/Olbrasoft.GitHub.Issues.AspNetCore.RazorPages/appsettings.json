{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=github;Username=github_search"
  },
  "Embeddings": {
    "BaseUrl": "http://localhost:11434",
    "Model": "nomic-embed-text",
    "MaxStartupRetries": 30,
    "StartupRetryDelayMs": 1000
  },
  "Search": {
    "DefaultPageSize": 10,
    "PageSizeOptions": [10, 25, 50]
  },
  "GitHub": {
    "GraphQLEndpoint": "https://api.github.com/graphql",
    "Token": ""
  },
  "BodyPreview": {
    "MaxLength": 200
  },
  "AiProviders": {
    "Cerebras": {
      "Endpoint": "https://api.cerebras.ai/v1/",
      "Models": ["qwen-3-32b", "qwen-3-235b-a22b-instruct-2507", "llama-3.3-70b"],
      "Keys": []
    },
    "Groq": {
      "Endpoint": "https://api.groq.com/openai/v1/",
      "Models": ["qwen/qwen3-32b", "llama-3.3-70b-versatile"],
      "Keys": []
    }
  },
  "Summarization": {
    "MaxTokens": 500,
    "Temperature": 0.3,
    "SystemPrompt": "You are a helpful assistant that summarizes GitHub issues concisely. Provide a 2-3 sentence summary in English that captures the key points. Do NOT use <think> tags - respond directly with the summary."
  }
}
