@page "{id:int}"
@using Markdig
@model Olbrasoft.GitHub.Issues.AspNetCore.RazorPages.Pages.Issue.DetailModel
@{
    ViewData["Title"] = Model.Issue?.Title ?? "Detail issue";
}

<div class="detail-container">
    <a href="javascript:history.back()" class="back-link">← Zpět na výsledky</a>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="error-message">
            @Model.ErrorMessage
        </div>
    }
    else if (Model.Issue != null)
    {
        <div class="issue-detail">
            <div class="issue-header">
                <h1>@Model.Issue.Title</h1>
                <span class="state-badge @(Model.Issue.IsOpen ? "state-open" : "state-closed")">
                    @Model.Issue.StateCzech
                </span>
            </div>

            <div class="issue-meta">
                <span class="repository">Repository: <strong>@Model.Issue.RepositoryName</strong></span>
                <span class="issue-number">Issue #@Model.Issue.IssueNumber</span>
            </div>

            <hr />

            <div class="issue-body">
                @if (!string.IsNullOrEmpty(Model.Issue.Body))
                {
                    @Html.Raw(Markdown.ToHtml(Model.Issue.Body, new MarkdownPipelineBuilder()
                        .UseAdvancedExtensions()
                        .Build()))
                }
                else
                {
                    <p class="no-body">Toto issue nemá textový obsah.</p>
                }
            </div>

            <hr />

            <div class="issue-actions">
                <a href="@Model.Issue.Url" target="_blank" class="github-button">Otevřít na GitHubu ↗</a>
            </div>
        </div>
    }
</div>

<style>
    .detail-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
    }

    .back-link {
        display: inline-block;
        margin-bottom: 20px;
        color: #0969da;
        text-decoration: none;
    }

    .back-link:hover {
        text-decoration: underline;
    }

    .error-message {
        background-color: #ffebe9;
        border: 1px solid #ff818266;
        border-radius: 6px;
        padding: 16px;
        color: #cf222e;
    }

    .issue-detail {
        background: white;
        border: 1px solid #d0d7de;
        border-radius: 6px;
        padding: 24px;
    }

    .issue-header {
        display: flex;
        align-items: flex-start;
        gap: 12px;
        margin-bottom: 16px;
    }

    .issue-header h1 {
        margin: 0;
        font-size: 1.5rem;
        flex: 1;
    }

    .state-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        white-space: nowrap;
    }

    .state-open {
        background-color: #dafbe1;
        color: #1a7f37;
    }

    .state-closed {
        background-color: #8250df1a;
        color: #8250df;
    }

    .issue-meta {
        display: flex;
        gap: 20px;
        color: #656d76;
        font-size: 0.9rem;
        margin-bottom: 16px;
    }

    .issue-body {
        line-height: 1.6;
    }

    .issue-body h1, .issue-body h2, .issue-body h3, .issue-body h4 {
        margin-top: 24px;
        margin-bottom: 16px;
    }

    .issue-body pre {
        background-color: #f6f8fa;
        border-radius: 6px;
        padding: 16px;
        overflow-x: auto;
    }

    .issue-body code {
        background-color: #f6f8fa;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.9em;
    }

    .issue-body pre code {
        background: none;
        padding: 0;
    }

    .issue-body ul, .issue-body ol {
        padding-left: 24px;
    }

    .issue-body table {
        border-collapse: collapse;
        width: 100%;
        margin: 16px 0;
    }

    .issue-body th, .issue-body td {
        border: 1px solid #d0d7de;
        padding: 8px 12px;
        text-align: left;
    }

    .issue-body th {
        background-color: #f6f8fa;
    }

    .issue-body blockquote {
        border-left: 4px solid #d0d7de;
        padding-left: 16px;
        margin-left: 0;
        color: #656d76;
    }

    .no-body {
        color: #656d76;
        font-style: italic;
    }

    .issue-actions {
        margin-top: 24px;
    }

    .github-button {
        display: inline-block;
        background-color: #24292f;
        color: white;
        padding: 10px 20px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
    }

    .github-button:hover {
        background-color: #32383f;
    }

    hr {
        border: none;
        border-top: 1px solid #d0d7de;
        margin: 24px 0;
    }
</style>
