@page "{id:int}"
@using Markdig
@model Olbrasoft.GitHub.Issues.AspNetCore.RazorPages.Pages.Issue.DetailModel
@{
    ViewData["Title"] = Model.Issue?.Title ?? "Detail issue";
}

<div class="detail-container">
    <div class="nav-buttons nav-buttons-top">
        <a href="@Model.SafeReturnUrl" class="back-link">‚Üê Zpƒõt na v√Ωsledky</a>
        @if (Model.Issue != null)
        {
            <a href="@Model.Issue.Url" target="_blank" class="github-button">Otev≈ô√≠t na GitHubu ‚Üó</a>
        }
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="error-message">
            @Model.ErrorMessage
        </div>
    }
    else if (Model.Issue != null)
    {
        <div class="issue-detail">
            <div class="issue-header">
                <h1>@Model.Issue.Title</h1>
                <span class="state-badge @(Model.Issue.IsOpen ? "state-open" : "state-closed")">
                    @Model.Issue.StateCzech
                </span>
            </div>

            <div class="issue-meta">
                <span class="repository">Repository: <strong>@Model.Issue.RepositoryName</strong></span>
                <span class="issue-number">Issue #@Model.Issue.IssueNumber</span>
            </div>

            @if (Model.Issue.Labels.Count > 0)
            {
                <div class="labels-container">
                    @foreach (var label in Model.Issue.Labels)
                    {
                        <span class="label-badge" style="background-color: #@label.Color; color: @label.TextColor;">@label.Name</span>
                    }
                </div>
            }

            <div id="ai-summary-container" data-issue-id="@Model.Issue.Id" data-summary-pending="@Model.SummaryPending.ToString().ToLower()" data-summary-language="@Model.Language">
                @if (!string.IsNullOrEmpty(Model.Summary))
                {
                    <div class="ai-summary">
                        <div class="ai-summary-header">
                            <span class="ai-icon">ü§ñ</span>
                            <span class="ai-label">AI Shrnut√≠</span>
                            @if (!string.IsNullOrEmpty(Model.SummaryProvider))
                            {
                                <span class="ai-provider">@Model.SummaryProvider</span>
                            }
                        </div>
                        <p class="ai-summary-text">@Model.Summary</p>
                    </div>
                }
                else if (!string.IsNullOrEmpty(Model.SummaryError))
                {
                    <div class="ai-summary ai-summary-error">
                        <div class="ai-summary-header">
                            <span class="ai-icon">‚ö†Ô∏è</span>
                            <span class="ai-label">AI Shrnut√≠ nedostupn√©</span>
                        </div>
                        <p class="ai-summary-text">@Model.SummaryError</p>
                    </div>
                }
                else if (Model.SummaryPending)
                {
                    <div class="ai-summary ai-summary-loading">
                        <div class="ai-summary-header">
                            <span class="ai-icon ai-icon-spin">‚è≥</span>
                            <span class="ai-label">Generuji AI shrnut√≠...</span>
                        </div>
                        <p class="ai-summary-text">Shrnut√≠ bude za chv√≠li k dispozici.</p>
                    </div>
                }
            </div>

            <hr />

            <div class="issue-body">
                @if (!string.IsNullOrEmpty(Model.Issue.Body))
                {
                    @Html.Raw(Markdown.ToHtml(Model.Issue.Body, new MarkdownPipelineBuilder()
                        .UseAdvancedExtensions()
                        .Build()))
                }
                else
                {
                    <p class="no-body">Toto issue nem√° textov√Ω obsah.</p>
                }
            </div>

            <hr />

            <div class="nav-buttons nav-buttons-bottom">
                <a href="@Model.SafeReturnUrl" class="back-link">‚Üê Zpƒõt na v√Ωsledky</a>
                <a href="@Model.Issue.Url" target="_blank" class="github-button">Otev≈ô√≠t na GitHubu ‚Üó</a>
            </div>
        </div>
    }
</div>

<style>
    .detail-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
    }

    .nav-buttons {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 16px;
    }

    .nav-buttons-top {
        margin-bottom: 20px;
    }

    .nav-buttons-bottom {
        margin-top: 24px;
    }

    .back-link {
        display: inline-block;
        color: #0969da;
        text-decoration: none;
    }

    .back-link:hover {
        text-decoration: underline;
    }

    .error-message {
        background-color: #ffebe9;
        border: 1px solid #ff818266;
        border-radius: 6px;
        padding: 16px;
        color: #cf222e;
    }

    .issue-detail {
        background: white;
        border: 1px solid #d0d7de;
        border-radius: 6px;
        padding: 24px;
    }

    .issue-header {
        display: flex;
        align-items: flex-start;
        gap: 12px;
        margin-bottom: 16px;
    }

    .issue-header h1 {
        margin: 0;
        font-size: 1.5rem;
        flex: 1;
    }

    .state-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        white-space: nowrap;
    }

    .state-open {
        background-color: #dafbe1;
        color: #1a7f37;
    }

    .state-closed {
        background-color: #8250df1a;
        color: #8250df;
    }

    .issue-meta {
        display: flex;
        gap: 20px;
        color: #656d76;
        font-size: 0.9rem;
        margin-bottom: 16px;
    }

    .issue-body {
        line-height: 1.6;
    }

    .issue-body h1, .issue-body h2, .issue-body h3, .issue-body h4 {
        margin-top: 24px;
        margin-bottom: 16px;
    }

    .issue-body pre {
        background-color: #f6f8fa;
        border-radius: 6px;
        padding: 16px;
        overflow-x: auto;
    }

    .issue-body code {
        background-color: #f6f8fa;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.9em;
    }

    .issue-body pre code {
        background: none;
        padding: 0;
    }

    .issue-body ul, .issue-body ol {
        padding-left: 24px;
    }

    .issue-body table {
        border-collapse: collapse;
        width: 100%;
        margin: 16px 0;
    }

    .issue-body th, .issue-body td {
        border: 1px solid #d0d7de;
        padding: 8px 12px;
        text-align: left;
    }

    .issue-body th {
        background-color: #f6f8fa;
    }

    .issue-body blockquote {
        border-left: 4px solid #d0d7de;
        padding-left: 16px;
        margin-left: 0;
        color: #656d76;
    }

    .no-body {
        color: #656d76;
        font-style: italic;
    }

    .github-button {
        display: inline-block;
        background-color: #24292f;
        color: white;
        padding: 10px 20px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
    }

    .github-button:hover {
        background-color: #32383f;
    }

    hr {
        border: none;
        border-top: 1px solid #d0d7de;
        margin: 24px 0;
    }

    /* AI Summary */
    .ai-summary {
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
        border: 1px solid #0ea5e9;
        border-radius: 8px;
        padding: 16px;
        margin-bottom: 16px;
    }

    .ai-summary-error {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        border-color: #f59e0b;
    }

    .ai-summary-header {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 8px;
    }

    .ai-icon {
        font-size: 1.2em;
    }

    .ai-label {
        font-weight: 600;
        color: #0369a1;
    }

    .ai-summary-error .ai-label {
        color: #b45309;
    }

    .ai-provider {
        font-size: 0.75em;
        color: #64748b;
        background-color: rgba(255, 255, 255, 0.5);
        padding: 2px 8px;
        border-radius: 12px;
    }

    .ai-summary-text {
        margin: 0;
        color: #1e3a5f;
        line-height: 1.6;
    }

    .ai-summary-error .ai-summary-text {
        color: #78350f;
    }

    /* AI Summary loading state */
    .ai-summary-loading {
        background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
        border-color: #9ca3af;
    }

    .ai-summary-loading .ai-label {
        color: #6b7280;
    }

    .ai-summary-loading .ai-summary-text {
        color: #6b7280;
    }

    .ai-icon-spin {
        animation: spin 1.5s linear infinite;
    }

    @@keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    /* AI Summary received animation */
    .ai-summary-received {
        animation: summaryReceived 0.5s ease-out;
    }

    @@keyframes summaryReceived {
        0% {
            background-color: #d1fae5;
            transform: scale(1.02);
        }
        100% {
            background-color: transparent;
            transform: scale(1);
        }
    }

    /* Issue labels */
    .labels-container {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin-bottom: 16px;
    }

    .label-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 16px;
        font-size: 12px;
        font-weight: 500;
        white-space: nowrap;
    }
</style>

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/detail-updates.js"></script>
}
